<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/corner_rounded"
    android:elevation="2dp">

    <!-- Left Thumbnail image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="16dp">
        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/news_thumbnail"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

        <!-- Title -->

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redditsans"
            android:layout_alignTop="@+id/card_thumbnail"
            android:layout_toEndOf="@+id/card_thumbnail"
            android:textColor="#040404"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_marginBottom="5dp"
            tools:text="Title of the news like a short description" />

        <!-- Subreddit -->
        <TextView
            android:id="@+id/subreddit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redditsans"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/title"
            android:textColor="#343434"
            android:textSize="14sp"
            tools:ignore="SmallSp"
            tools:text="subredditName" />

        <!-- Comments -->

        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redditsans"
            android:layout_alignEnd="@+id/subreddit"
            android:layout_below="@+id/title"
            android:gravity="end"
            android:textColor="#FF4500"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="SmallSp"
            tools:text="69 comments" />

        <!-- Time -->

        <TextView
            android:id="@+id/time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redditsans"
            android:layout_alignStart="@+id/subreddit"
            android:layout_below="@+id/subreddit"
            android:textColor="#343434"
            android:textSize="12sp"
            tools:ignore="SmallSp"
            android:layout_marginTop="5dp"
            tools:text="12 hours ago" />

</RelativeLayout>